@model CategoryAddModel


<form asp-action="Create" asp-controller="Category" asp-area="Admin" method="post" enctype="multipart/form-data" class="w-75 mx-auto p-3">

    <div class="form-group">
        <label>Product Name:</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    
    <div class="form-group">
        <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-warning" >Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section JavaScripts{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

