@model List<Category>


<a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning btn-sm">Update</a>
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
</table>

