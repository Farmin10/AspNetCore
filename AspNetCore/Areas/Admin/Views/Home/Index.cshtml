@model List<Product>


<a asp-action="Create" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Categories</th>
        <th>Name</th>
        <th>Price</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
            <getCategoryName product-id="@item.Id"></getCategoryName>
            </td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger btn-sm">Delete</a>
                <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning btn-sm">Update</a>
                <a asp-action="AddCategory" asp-controller="Home" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-dark btn-sm">Add Category</a>

            </td>
        </tr>
    }
</table>